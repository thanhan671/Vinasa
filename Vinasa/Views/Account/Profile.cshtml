@model Vinasa.Models.AdminAccountModels
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}
@using (Html.BeginForm("Profile", "Account", FormMethod.Post))
{
    <div class="row-pf">
        <div class="pf-content">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center" style=" height: 380px;">
                        <img src="~/img/iconVinasa (2).png" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Html.DisplayTextFor(m => m.Ten) </h5>
                        <p class="text-muted mb-1"></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body" style=" height: 380px;">
                        <div class="row row-ip">
                            <div class="col-sm-3">
                                <p class="mb-0">Họ Tên</p>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" class="text-muted mb-0 pf-ip" @Html.TextBoxFor(m => m.Ten)
                            </div>
                        </div>
                        <hr>
                        <div class="row row-ip">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <input type="email" class="text-muted mb-0 pf-ip" @Html.TextBoxFor(m => m.Email, new { @readonly = true })
                            </div>
                        </div>
                        <hr>
                        <div class="row row-ip">
                            <div class="col-sm-3">
                                <p class="mb-0">Số Điện Thoại</p>
                            </div>
                            <div class="col-sm-9">
                                <input type="tel" class="text-muted mb-0 pf-ip" @Html.TextBoxFor(m => m.Sdt)
                            </div>
                        </div>
                        <hr>
                        <div class="row row-ip">
                            <div class="col-sm-3">
                                <p class="mb-0">Mật Khẩu Hiện Tại</p>
                            </div>
                            <div class="col-sm-9">
                                <input class="text-muted mb-0 pf-ip" @Html.PasswordFor(m => m.MatKhau)
                                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr>
                        <div class="row row-ip">
                            <div class="col-sm-3">
                                <p class="mb-0">Mật khẩu mới</p>
                            </div>
                            <div class="col-sm-9">
                                <input type="password" class="text-muted mb-0 pf-ip" @Html.PasswordFor(m => m.newMatKhau)
                                       @Html.ValidationMessageFor(m => m.newMatKhau, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr>
                        <div class="row row-ip">
                            <div class="col-sm-3">

                                <p class="mb-0">Xác nhận mật khẩu mới</p>
                            </div>
                            <div class="col-sm-9">
                                <input type="password" class="text-muted mb-0 pf-ip" @Html.PasswordFor(m => m.reMatKhau)
                                       @Html.ValidationMessageFor(m => m.reMatKhau, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <div class="button-form f-r">
            <button class="button-cancel" onclick="location.href = 'javascript:history.go(-1)'">Huỷ</button>
            <button class="button-lc" type="submit" name="save">Cập nhật Tài Khoản</button>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>s
