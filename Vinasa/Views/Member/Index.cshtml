
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

<link href="@Url.Content("~/css/button.css")" rel="stylesheet">
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Hội Viên</h1>

<!-- DataTales Example -->
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="right-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Danh sách hội viên Vinasa</h6>
        </div>
        <div class="left-content">
            <button class="button-lc" style=" width: 200px" data-toggle="modal" data-target="#exampleModal">Import Excel</button>

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Import Excel</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <label class="form-label" for="customFile">Chọn 1 file Excel</label>
                            <input type="file" class="form-control" id="customFile" />
                        </div>
                        <div class="modal-footer" id="modal-b">
                            <button type="button"
                                    class="btn btn-secondary button-lc"
                                    data-dismiss="modal">
                                Cancel
                            </button>
                            <button type="button" class="btn btn-primary button-lc">Upload</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Số Thuế</th>
                        <th>Tên Công Ty </th>
                        <th>Tên Viết Tắt Của Công Ty</th>
                        <th>Email</th>
                        <th>Số Điện Thoại</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>0315159393</td>
                        <td>
                            Công ty Cổ phần FPT
                        </td>
                        <td>
                            FPT
                        </td>
                        <td>
                            contact@fpt.com.vn
                        </td>
                        <td>
                            0937688958
                        </td>
                        <td class="action" style="display:flex; justify-content:space-around; align-items:center">
                            <li class="action-item" style="list-style-type: none; font-size: 18px">
                                <a href="@Url.Action("Edit")" class="action-icon">
                                    <i style="color: #F69928" class="fa-solid fa-pen-to-square icon"></i>
                                </a>
                            </li>
                            <li class="action-item" style="list-style-type:none; font-size: 18px">
                                <a href="" class="action-icon" data-toggle="modal" data-target="#myModal">
                                    <i style="color: #F69928" class="fa-solid fa-trash-can icon"></i>
                                </a>
                            </li>
                            <li class="action-item" style="list-style-type: none; font-size: 18px">
                                <a href="@Url.Action("DetailMember")" class="action-icon">
                                    <i style="color: #F69928" class="fa-solid fa-circle-info icon"></i>
                                </a>
                            </li>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">
                    THÔNG BÁO !
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                Xác nhận xóa hội viên này ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                <button type="button" class="button-lc">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
