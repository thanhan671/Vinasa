@model IEnumerable<Vinasa.Models.HOINGHIQUOCTE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Hội Nghị Quốc Tế</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="right-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Danh sách các hội nghị quốc tế</h6>
        </div>
        <div class="left-content">
            <button class="button-lc" onclick="location.href='@Url.Action("Create", "IC")'">Thêm Mới</button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ten)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThoiGianBatDau)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThoiGianKetThuc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiaDiem)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "IC", new{ id = @item.ID})">
                                @Html.DisplayFor(modelItem => item.Ten)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThoiGianBatDau)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThoiGianKetThuc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaDiem)
                        </td>
                        <td class="action" style=" display:flex; justify-content:space-around; align-items:center">
                            <li class="action-item">
                                <a class="action-icon" href="@Url.Action("Edit", "IC", new{ id = @item.ID})">
                                    <i class="fa-solid fa-pen-to-square icon"></i>
                                </a>
                            </li>
                            <li class="action-item">
                                <a class="action-icon delete-btn" data-id="@item.ID">
                                    <i class="fa-solid fa-trash-can icon"></i>
                                </a>
                            </li>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
            $(".delete-btn").on("click", function () {
                var id = $(this).data("id");
                $.ajax({
                    url: "@Url.Action("DeleteSelected", "IC")",
                    data: { id: id },
                    success: function (data) {
                        console.log(data);
                        $("#deleteModal .modal-dialog").html(data);
                        $("#deleteModal").modal("show");
                    }
                });
            });
    </script>
}