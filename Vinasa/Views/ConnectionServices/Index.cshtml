@model IEnumerable<Vinasa.Models.SUDUNGDICHVUKETNOI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

<div class="heading">
    <h1 class="h3 mb-2 text-gray-800">Danh sách thành viên tham gia dịch vụ kết nối</h1>
</div>
<!-- Page Heading -->
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="right-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Danh sách các doanh nghiệp tham gia dịch vụ</h6>
        </div>
        <div class="left-content">
            <button type="button" id="importexcel" name="importexcel" class="button-lc" style=" width: 200px;" data-toggle="modal" data-target="#importexcel-window">
                Thêm File Excel
            </button>
        </div>
    </div>
    @*@Html.Partial("~/Views/SeminarParticipants/_List.cshtml", Model.SeminarParticipants)*@
    <div class="modal fade" id="importexcel-window" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tải lên file Excel</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("ImportExcel", "ConnectionServices",
                        FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="modal-body">
                                <label class="form-label" for="customFile">Chọn 1 file Excel</label>
                            </div>
                            <div class="col-md-10">
                                <input class="input-file" type="file" name="UploadedFile" onchange="uploadFile(this)" />
                            </div>
                        </div>
                        <div class="modal-footer" id="modal-b">
                            <button type="button"
                                    class="btn btn-default"
                                    data-dismiss="modal">
                                Hủy
                            </button>
                            <button type="submit" class="btn btn-primary button-lc" data-toggle="modal" data-target="#Success">
                                Tải lên
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Tên Công Ty
                        </th>
                        <th>
                            Tên Người Liên Hệ
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Số Điện Thoại
                        </th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.TenCongTy)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.TenNguoiLienHe)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.DienThoai)
                            </td>
                            <td class="td-action" style="display:flex; justify-content:space-around; align-items:center">
                                <li class="action-item" style="list-style-type: none; font-size: 18px">
                                    <a href=@Url.Action("Details","ConnectionServices", new{ id = @item.ID}) class="action-icon">
                                        <i style="color: #F69928" class="fa-solid fa-circle-info icon"></i>
                                    </a>
                                </li>
                                <li class="action-item" style="list-style-type: none; font-size: 18px">
                                    <a class="action-icon" href=@Url.Action("Edit", "ConnectionServices", new{ id = @item.ID})>
                                        <i class="fa-solid fa-pen-to-square icon"></i>
                                    </a>
                                </li>
                                <li class="action-item" style="list-style-type:none; font-size: 18px">
                                    <a data-toggle="modal" data-target="#myModal">
                                        <i class="fa-solid fa-trash-can icon"></i>
                                    </a>
                                </li>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                    </div>
                </div>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                   <div class="modal-dialog" role="document">
                       <div class="modal-content">
                           <div class="modal-header">
                               <h4 class="modal-title" id="myModalLabel">THÔNG BÁO !</h4>
                               <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                           </div>
                           <div class="modal-body">
                               Xác nhận xóa thành viên này ?
                           </div>
                           <div class="modal-footer">
                               <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                               <button type="button" class="button-lc">Xác nhận</button>
                           </div>
                       </div>
               </div>
        </div>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
$(".delete-btn").on("click", function () {
    var id = $(this).data("id");
    $.ajax({
        url: "@Url.Action("Delete", "ConnectionServices")",
        data: { id: id },
        success: function (data) {
            console.log(data);
            $("#deleteModal .modal-dialog").html(data);
            $("#deleteModal").modal("show");
        }
    });
});
</script>


@if (Session["ViewBag.Success"] != null)
{
    int success = int.Parse(Session["ViewBag.Success"].ToString());
    int exist = int.Parse(Session["ViewBag.Exist"].ToString());
    int count = success + exist;

    <button type="button" hidden class="btn btn-lg btn-block btn-outline-success mb-2" id="import-success"
            data-toggle="modal" data-target="#Success">
        Success
    </button>
    <script>
        window.onload = function () {
            document.getElementById('import-success').click();
        }
    </script>
    <!-- Modal -->
    <div class="modal fade text-left" id="Success" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="myModalLabel34">KẾT QUẢ IMPORT !</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-12">
                        <a> Đã thêm thành công <b>"@success"</b> trong <b>"@count"</b> hội viên từ file</a>
                    </div>
                    <br />
                    <div class="col-12">
                        <div class="alert alert-success">
                            <strong>Thành công!</strong> Thêm mới thành công <b>@success</b> doanh nghiệp !
                        </div>
                        <div class="alert alert-warning">
                            <strong>Đã tồn tại!</strong>  Đã tồn tại <b>@exist</b> doanh nghiệp trên hệ thống !
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="reset" class="btn btn-default" data-dismiss="modal" value="Đóng">
                </div>
            </div>
        </div>
    </div>
    Session["ViewBag.Success"] = null;
}