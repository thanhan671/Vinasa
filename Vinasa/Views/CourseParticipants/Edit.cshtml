@model Vinasa.Models.THAMGIAKHOAHOC
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

@using (Html.BeginForm("Edit", "CourseParticipants", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="container col-11 centerPage">
    <h5 class="heading">Sửa Thông Tin Doanh Nghiệp Tham Gia</h5>
    <form class="form-field form-inputs-odd" method="post" enctype="multipart/form-data" action="@Url.Action("Member")">
        <div class="input-wrapper">
            @Html.EditorFor(m => m.HoTen, new { htmlAttributes = new { @class = "ip-form", @required = "required" } })
            <label class="lb-form" for="tax">
                Họ tên người đại diện
            </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.CongTyToChucCoQuan, new { htmlAttributes = new { @class = "ip-form", @required = "required" } })
            <label class="lb-form" for="tax">Tên đơn vị </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.ChucDanh, new { htmlAttributes = new { @class = "ip-form", @required = "required" } })
            <label class="lb-form" for="tax">
                Chức danh
            </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "ip-form", @required = "required" } })
            <label class="lb-form" for="tax">
                Email
            </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.Sdt, new { htmlAttributes = new { @class = "ip-form", @required = "required" } })
            <label class="lb-form" for="tax">
                Di động
            </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.SoLuongHocVien, new { htmlAttributes = new { @class = "ip-form", @required = "required" } })
            <label class="lb-form" for="tax">
                Số lượng học viên
            </label>
        </div>
        <div class="input-wrapper">
            @Html.CheckBoxFor(m => m.HoiVienVinasa, new { @class = "form-check-input" })
            <label class="form-check-label">Hội viên Vinasa</label>
        </div>
    </form>
    <div class="button-form f-r">
        <button class="button-cancel" onclick="location.href='@Url.Action("Index", "CourseParticipants")'" type="button" name="cancel">Huỷ</button>
        <button class="button-lc" type="submit" name="save">Xác Nhận</button>
    </div>
</div>
    
}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>

        $('#cancel').click(function () {
            location.href = 'javascript:history.go(-1)';
        })

    </script>

