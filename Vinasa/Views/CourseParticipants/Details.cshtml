@model Vinasa.Models.THAMGIAKHOAHOC
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}
@Html.HiddenFor(m => m.IdKhoaHoc)
<div class="container col-11 centerPage">
    <h5 class="heading">Thông Tin Doanh Nghiệp Tham Gia</h5>
    <form class="form-field form-inputs-odd" method="post" enctype="multipart/form-data">
        <div class="input-wrapper">
            @Html.EditorFor(m => m.HoTen, new { htmlAttributes = new { @class = "ip-form", @readonly = "readonly" } })
            <label class="lb-form" for="tax">
                Họ tên người đại diện
            </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.CongTyToChucCoQuan, new { htmlAttributes = new { @class = "ip-form", @readonly = "readonly" } })
            <label class="lb-form" for="tax">Tên đơn vị </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.ChucDanh, new { htmlAttributes = new { @class = "ip-form", @readonly = "readonly" } })
            <label class="lb-form" for="tax">
                Chức danh
            </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "ip-form", @readonly = "readonly" } })
            <label class="lb-form" for="tax">
                Email
            </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.Sdt, new { htmlAttributes = new { @class = "ip-form", @readonly = "readonly" } })
            <label class="lb-form" for="tax">
                Di động
            </label>
        </div>
        <div class="input-wrapper">
            @Html.EditorFor(m => m.SoLuongHocVien, new { htmlAttributes = new { @class = "ip-form", @readonly = "readonly" } })
            <label class="lb-form" for="tax">
                Số lượng học viên
            </label>
        </div>
        <div class="input-wrapper">
            <label class="form-check-label">
                @Html.CheckBoxFor(m => m.HoiVienVinasa, new { @class = "form-check-input" })
                <label class="form-check-label">Hội viên Vinasa</label>
            </label>
        </div>
    </form>
</div>
<div class="button-form f-r">
    <button class="button-lc" onclick="location.href = '@Url.Action("Details", "Course", new { id = Model.IdKhoaHoc})'">Quay Lại</button>
</div>
