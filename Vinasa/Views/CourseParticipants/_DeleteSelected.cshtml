@model Vinasa.Models.THAMGIAKHOAHOC
@using (Html.BeginForm("Delete", "CourseParticipants"))
{
    @Html.AntiForgeryToken()

    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Xoá người học khỏi này khỏi giải thưởng?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            Bạn có chắc chắn xoá?
        </div>
        <div class="modal-footer">
            @Html.HiddenFor(model => model.Id)
            <input type="hidden" id="khoaHocId" name="khoaHocId" value="@ViewBag.IdKhoaHoc" />
            <button type="button" class="btn btn-default" data-dismiss="modal">Huỷ</button>
            <input type="submit" class="button-lc" value="Xác Nhận" />
        </div>
    </div>
}
