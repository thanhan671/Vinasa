@model IEnumerable<Vinasa.Models.THAMGIAKHOAHOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="right-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Danh sách các doanh nghiệp tham gia khóa đào tạo</h6>
        </div>
    </div>
    @Html.Partial("_List", Model);
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
    </div>
</div>


@section scripts{
    <script>
        $(".delete-btn").on("click", function () {
            var id = $(this).data("id");
            $.ajax({
                url: "@Url.Action("DeleteSelected", "CourseParticipants")",
                data: { id: id},
                success: function (data) {
                    $("#deleteModal .modal-dialog").html(data);
                    $("#deleteModal").modal("show");
                }
            });
        });
    </script>
}