@model IEnumerable<Vinasa.Models.THAMGIAKHOAHOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

<!-- Page Heading -->
<div class="heading">
    <h1 class="h3 mb-2 text-gray-800">Khóa đào tạo </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" onclick="location.href = '@Url.Action("Index","Course")'" style="color:blue; cursor:pointer;">Danh Sách Các Hội Nghị</li>
            <li class="breadcrumb-item active" aria-current="page">Danh Sách Hội Viên Tham Gia Khóa Đào Tạo</li>
        </ol>
    </nav>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="right-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Danh sách các doanh nghiệp tham gia khóa đào tạo</h6>
        </div>

        <div class="left-content">
            <button class="button-download" onclick="location.href='@Url.Action("Download", "Course")'">Tải mẫu Excel</button>
            <button type="button" id="importexcel" name="importexcel" class="button-lc" style=" width: 200px;" data-toggle="modal" data-target="#importexcel-window">

                Thêm File Excel

            </button>
        </div>
    </div>
    @Html.Partial("_List", Model)
</div>
<div class="modal fade" id="importexcel-window" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tải lên file Excel</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("ImportExcel", "CourseParticipants", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="modal-body">
                                <label class="form-label" for="customFile">Chọn 1 file Excel</label>
                            </div>
                            <div class="col-md-10">
                                <input class="input-file" type="file" name="UploadedFile" onchange="uploadFile(this)" />
                            </div>
                        </div>
                        <div class="modal-footer" id="modal-b">
                            <button type="button"
                                    class="btn btn-default"
                                    data-dismiss="modal">
                                Hủy
                            </button>
                            <button type="submit" class="btn btn-primary button-lc">
                                Tải lên
                            </button>
                        </div>
                     }
                </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
    </div>
</div>


@section scripts{
    <script>
        $(".delete-btn").on("click", function () {
            var id = $(this).data("id");
            $.ajax({
                url: "@Url.Action("DeleteSelected", "CourseParticipants")",
                data: { id: id},
                success: function (data) {
                    $("#deleteModal .modal-dialog").html(data);
                    $("#deleteModal").modal("show");
                }
            });
        });
    </script>
}