@model Vinasa.Models.Seminar
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="input-wrapper">
    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "ip-form" } })
    @Html.LabelFor(model => model.Title, new { @class = "lb-form" })
    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
</div>
<div class="input-wrapper">
    @Html.TextBoxFor(model => model.OpenDate, "{0:yyyy-MM-ddTHH:mm:ss}",  new { @class = "ip-form", @type = "datetime-local" })
    @Html.LabelFor(model => model.OpenDate, new { @class = "lb-form" })
    @Html.ValidationMessageFor(model => model.OpenDate, "", new { @class = "text-danger" })
</div>
<div class="input-wrapper">
    @Html.TextBoxFor(model => model.CloseDate, "{0:yyyy-MM-ddTHH:mm:ss}",  new { @class = "ip-form", @type = "datetime-local" })
    @Html.LabelFor(model => model.CloseDate, new { @class = "lb-form" })
    @Html.ValidationMessageFor(model => model.CloseDate, "", new { @class = "text-danger" })
</div>
<div class="input-wrapper">
    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "ip-form"} })
    @Html.LabelFor(model => model.Address, new { @class = "lb-form" })
    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

</div>
<div class="button-form">
    <button class="button-lc">Xác Nhận</button>
    <button class="button-lc button-cancel" onclick="location.href='@Url.Action("Index", "Seminars")'" id="cancel">Huỷ</button>
    @*<input type="button"
           value="Hủy"
           onclick="location.href='@Url.Action("Index", "Seminars")'"
           class="button-lc button-cancel" />*@
</div>
