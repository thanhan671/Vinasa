
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

<div class="container">
    <div class="col-6">
        <h5 class="heading">Sửa Thông Tin Giải Thưởng</h5>

        <form class="form-field" method="post" enctype="multipart/form-data">
            <div class="input-wrapper">
                <input class="ip-form" type="text" id="tax" contenteditable="true" value="Sao Khuê" />
                <label class="lb-form" for="tax">Tên Giải Thưởng</label>
            </div>

            <div class="input-wrapper">
                <input class="ip-form" type="datetime-local" contenteditable="true">
                <label class="lb-form" for="name">Thời gian diễn ra</label>
            </div>
            <div class="input-wrapper">
                <input class="ip-form" type="text" contenteditable="true" value="HCM">
                <label class="lb-form" for="name">Địa điểm Diễn Ra</label>
            </div>

        </form>
    </div>
    <div class="button-form">
        <button class="button-cancel" onclick="location.href='javascript:history.go(-1)'" type="button" name="cancel">Huỷ</button>
        <button class="button-lc" type="submit" name="save">Xác Nhận</button>
    </div>
</div>
