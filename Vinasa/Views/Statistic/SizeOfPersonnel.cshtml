
@{
    ViewBag.Title = "SizeOfPersonnel";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Thống Kê</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="left-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Thống Kê Danh Sách Số Lượng Nhân Sự Của Doanh Nghiệp</h6>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="filter-fade" class="d-none selectdiv">
                <select class="select-sort form-select d-inline mr-2" id="dropdown-filter">
                    <option selected>Lọc</option>
                    <option value="1">Dưới 500</option>
                    <option value="2">Dưới 1000</option>
                    <option value="3">Trên 1500</option>
                </select>
            </div>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Tên Đơn Vị
                        </th>
                        <th>
                            Số Lượng Nhân Sự
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td class="column-2">
                            <a href="">
                                Vinasa
                            </a>
                        </td>
                        <td>
                            1000
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        $(function () {
            $('#dataTable_filter').prepend($('#dropdown-filter')).clone();
            $('#filter-fade').remove();
        })

    </script>
}