
@{
    ViewBag.Title = "FieldOfActivity";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Thống Kê</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="left-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Thống Kê Danh Sách Hội Viên Theo Lĩnh Vực Hoạt Động</h6>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="filter-fade" class="d-none selectdiv">
                <select class="select-sort form-select d-inline mr-2" id="dropdown-filter">
                    <option selected>Lọc</option>
                    <option value="1">Công Nghệ Thông Tin</option>
                    <option value="2">Đơn Vị Ứng Dụng CNTT</option>
                    <option value="3">Cơ Quan Quản Lý Nhà Nước</option>
                    <option value="4">Đại Sứ Quán/Thương Vụ</option>
                    <option value="5">Nhà Tài Trợ</option>
                </select>
            </div>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Tên Đơn Vị
                        </th>
                        <th>
                            Lĩnh Vực Hoạt Động
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td class="column-2">
                            Vinasa
                        </td>
                        <td>
                            Công Nghệ Thông Tin
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        $(function () {
            $('#dataTable_filter').prepend($('#dropdown-filter')).clone();
            $('#filter-fade').remove();
        })

    </script>
}

