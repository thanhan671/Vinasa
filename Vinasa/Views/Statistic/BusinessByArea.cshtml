@model IEnumerable < Vinasa.Models.BusinessByAreaViewModel>
@{
    ViewBag.Title = "BusinessByArea";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Thống Kê</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="left-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Thống Kê Danh Sách Doanh Nghiệp Theo Vùng</h6>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Khu Vực
                        </th>
                        <th>
                            Số lượng doanh nghiệp
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="column-2">
                                @item.Ten
                            </td>
                            <td>
                                @item.SoLuong
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>