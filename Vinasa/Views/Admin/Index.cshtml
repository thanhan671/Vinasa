@model Vinasa.Models.TAIKHOANADMIN
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}

<link href="@Url.Content("~/css/button.css")" rel="stylesheet">
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Quản Trị Viên</h1>

<!-- DataTales Example -->
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="right-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Danh sách quản trị viên</h6>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>Tên Quản Trị </th>
                        <th>Email</th>
                        <th>Số Điện Thoại</th>
                        <th>Phòng Ban</th>
                        <th>Trạng Thái</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(Model => Model.Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.Sdt)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.PhongBan)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.TrangThai)
                        </td>
                        <td class="action" style="display:flex; justify-content:space-around; align-items:center">
                            <li class="action-item" style="list-style-type: none; font-size: 18px">
                                <a href="@Url.Action("Edit")" class="action-icon">
                                    <i style="color: #F69928" class="fa-solid fa-pen-to-square icon"></i>
                                </a>
                            </li>
                            <li class="action-item" style="list-style-type:none; font-size: 18px">
                                <a href="" class="action-icon" data-toggle="modal" data-target="#myModal">
                                    <i style="color: #F69928" class="fa-solid fa-trash-can icon"></i>
                                </a>
                            </li>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">
                    THÔNG BÁO !
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                Xác nhận xóa quản trị viên này ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                <button type="button" class="button-lc">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>

    $('#create').click(function () {
        location.href = "@Url.Action("Create")";
    })

</script>
<script>
    const btn = document.getElementById('btn');

    let index = 1;

    const colors = ['red', 'green'];

    btn.addEventListener('click', function onClick() {
        btn.style.backgroundColor = colors[index];
        btn.style.color = 'white';

        index = index >= colors.length - 1 ? 0 : index + 1;
    });
</script>

